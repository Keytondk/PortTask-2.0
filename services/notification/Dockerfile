# Build stage
FROM golang:1.22-alpine AS builder

WORKDIR /app

# Install build dependencies
RUN apk add --no-cache git ca-certificates

# Copy pkg module first (shared dependency)
COPY pkg/ /app/pkg/

# Copy service files
COPY services/notification/ /app/services/notification/

WORKDIR /app/services/notification

# Initialize go.mod if not exists
RUN if [ ! -f go.mod ]; then go mod init github.com/navo/services/notification && echo 'replace github.com/navo/pkg => ../../pkg' >> go.mod; fi

# Download dependencies
RUN go mod download || go mod tidy

# Build binary
RUN CGO_ENABLED=0 GOOS=linux go build -ldflags="-w -s" -o /notification ./cmd/main.go

# Runtime stage
FROM alpine:3.19

RUN apk add --no-cache ca-certificates tzdata

WORKDIR /app

# Copy binary from builder
COPY --from=builder /notification .

# Create non-root user
RUN adduser -D -g '' appuser
USER appuser

# Expose port
EXPOSE 8084

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:8084/health || exit 1

# Run
CMD ["./notification"]
