{
  "name": "navo",
  "version": "0.1.0",
  "private": true,
  "description": "The Nerve Center for Maritime Operations",
  "scripts": {
    "dev": "turbo run dev",
    "dev:simple": "./scripts/dev.sh --simple",
    "dev:full": "./scripts/dev.sh --full",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "turbo run test:e2e",
    "clean": "turbo run clean && rm -rf node_modules",
    "db:generate": "pnpm --filter=@navo/db generate",
    "db:migrate": "pnpm --filter=@navo/db migrate",
    "db:push": "pnpm --filter=@navo/db push",
    "db:seed": "pnpm --filter=@navo/db seed",
    "db:studio": "pnpm --filter=@navo/db studio",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "typecheck": "turbo run typecheck",
    "setup": "./scripts/setup.sh",
    "deploy": "./scripts/deploy.sh"
  },
  "devDependencies": {
    "@navo/typescript-config": "workspace:*",
    "@testing-library/react": "^16.3.1",
    "@vitejs/plugin-react": "^5.1.2",
    "jsdom": "^27.4.0",
    "prettier": "^3.2.5",
    "turbo": "^2.0.0",
    "typescript": "^5.4.0",
    "vitest": "^4.0.16"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
