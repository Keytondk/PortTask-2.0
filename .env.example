# ===========================================
# Navo Maritime Platform - Environment Config
# ===========================================
# Copy this file to .env and fill in your values

# -----------------------------
# Database (Supabase)
# -----------------------------
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT].supabase.co:5432/postgres
DB_SSL_MODE=require

# -----------------------------
# Redis (Upstash)
# -----------------------------
REDIS_URL=redis://default:[PASSWORD]@[HOST].upstash.io:6379

# -----------------------------
# Authentication
# -----------------------------
# REQUIRED: Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-key-min-32-chars

# Session config
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# -----------------------------
# Supabase (if using Supabase Auth)
# -----------------------------
NEXT_PUBLIC_SUPABASE_URL=https://[PROJECT].supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# -----------------------------
# API URLs
# -----------------------------
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_WS_URL=ws://localhost:8083

# Production URLs (set in Vercel/Railway)
# NEXT_PUBLIC_API_URL=https://api.navo.io
# NEXT_PUBLIC_WS_URL=wss://ws.navo.io

# -----------------------------
# Service Ports (local dev)
# -----------------------------
GATEWAY_PORT=8080
CORE_PORT=8081
VESSEL_PORT=8082
REALTIME_PORT=8083
NOTIFICATION_PORT=8084

# -----------------------------
# External Integrations
# -----------------------------
# AIS Provider (MarineTraffic or VesselFinder)
AIS_PROVIDER=marinetraffic
AIS_API_KEY=your-ais-api-key

# Email (Resend, SendGrid, or AWS SES)
EMAIL_PROVIDER=resend
EMAIL_API_KEY=your-email-api-key
EMAIL_FROM=noreply@navo.io

# Document Storage (S3-compatible)
STORAGE_PROVIDER=supabase
STORAGE_BUCKET=documents
# For AWS S3:
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_REGION=ap-southeast-1
# AWS_S3_BUCKET=navo-documents

# -----------------------------
# Feature Flags
# -----------------------------
FEATURE_RFQ_ENABLED=true
FEATURE_VESSEL_TRACKING_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true

# -----------------------------
# Observability
# -----------------------------
LOG_LEVEL=info
ENABLE_METRICS=true
SENTRY_DSN=

# -----------------------------
# Rate Limiting
# -----------------------------
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60s
